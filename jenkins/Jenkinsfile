pipeline {
  agent any
  tools {
      maven 'maven-3.8.6'
  }
  environment {
      MAVEN_POM_VERSION = readMavenPom().getVersion()
  }
  stages {
    stage ('Variables') {
      steps {
        echo "Maven Pom Version = [${MAVEN_POM_VERSION}]"
      }
    }
    stage ('Maven Build') {
        steps {
            sh 'mvn clean package'
        }
    }
  }
}
